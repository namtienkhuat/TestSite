{{ 'all.min.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "FAQs Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "FAQs on Design & Developer"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Your question here"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs Section presets",
      "category": "Custom",
      "blocks": [
        {
          "type": "faq_item",
        },
        {
          "type": "faq_item",
        },
        {
          "type": "faq_item",
        },
        {
          "type": "faq_item"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="container">
  <h1 class="title">{{ section.settings.section_title }}</h1>
  <div class="content">
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="question">
          <h2 class="question-content">{{ block.settings.question }}</h2>
          <i class="fa-solid fa-plus icon"></i>
        </div>
        <div class="answer" style="display: none;">
          <h2 class="answer-active">{{ block.settings.answer }}</h2>
          <div class="answer-list">
            <span>- Mattis nunc sed blandit libero volutpat.</span><br>
            <span>- Tortor at risus viverra adipiscing at in tellus.</span><br>
            <span>- Purus ut faucibus pulvinar elementum.</span><br>
            <span>- Blandit turpis cursus in hac habitasse.</span>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  * {
    box-sizing: border-box;
  }

  body {
    font-family: "Lato", sans-serif;
    width: 100%;
    height: 100vh;
    margin: 0 auto;
    background-color: #fbf6e9;
  }

  .container {
    padding: 20px 0 10px;
    max-width: 800px;
    margin: 0 auto;
  }

  .title {
    text-align: center;
    font-size: 40px;
    font-weight: 400;
  }
  @media (max-width: 990px) {
    .title {
      font-size: 30px;
    }
  }
  @media (max-width: 768px) {
    .title {
      font-size: 20px;
    }
  }

  .content {
    width: 100%;
    margin: 20px auto 0;
  }
  @media (max-width: 990px) {
    .content {
      padding: 0 10px;
    }
  }

  .first-question,
  .second-question,
  .third-question,
  .fourth-question,
  .fifth-question {
    border: 1px solid gray;
    background-color: #f4f4f4;
  }
  .first-question.first-question, .first-question.second-question, .first-question.third-question, .first-question.fourth-question,
  .second-question.first-question,
  .second-question.second-question,
  .second-question.third-question,
  .second-question.fourth-question,
  .third-question.first-question,
  .third-question.second-question,
  .third-question.third-question,
  .third-question.fourth-question,
  .fourth-question.first-question,
  .fourth-question.second-question,
  .fourth-question.third-question,
  .fourth-question.fourth-question,
  .fifth-question.first-question,
  .fifth-question.second-question,
  .fifth-question.third-question,
  .fifth-question.fourth-question {
    border-bottom: none;
  }

  .question,
  .answer {
    padding: 20px;
  }

  .question {
    display: flex;
    justify-content: space-between;
    height: 60px;
  }
  .question:hover {
    background-color: #5db996;
    color: #f4f4f4;
  }

  .icon {
    font-size: 20px;
  }
  .icon:hover {
    cursor: pointer;
  }
  @media (max-width: 375px) {
    .icon {
      display: none;
    }
  }

  .answer {
    max-width: 800px;
    display: none;
    background-color: #e3f0af;
  }

  .answer-active {
    font-weight: 800;
  }

  .answer-list {
    margin: 10px 0;
  }

  @media (max-width: 375px) {
    .question-content {
      width: 200px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  @media (max-width: 375px) {
    .question {
      column-gap: 10px;
    }
  }
{% endstylesheet %}

{% javascript %}
  const questions = document.querySelectorAll(".question");

  questions.forEach((question) => {
      question.addEventListener("click", () => {
          // Lấy phần tử câu trả lời gần kề
          const answer = question.nextElementSibling;

          // Lấy icon liên quan đến câu hỏi này
          const icon = question.querySelector("i.fa-solid.icon");

          // Đóng tất cả các câu hỏi khác
          questions.forEach((q) => {
              const otherAnswer = q.nextElementSibling;
              const otherIcon = q.querySelector("i.fa-solid.icon");

              if (otherAnswer.style.display === "block" && q !== question) {
                  otherAnswer.style.display = "none";
                  q.style.removeProperty("background-color");
                  q.style.removeProperty("color");
                  otherIcon.className = "fa-solid fa-plus icon"; // Đổi icon thành dấu cộng
              }
          });

          // Toggle hiển thị hoặc ẩn cho câu hỏi hiện tại
          if (answer.style.display === "none" || !answer.style.display) {
              answer.style.display = "block";
              question.style.backgroundColor = "#118B50";
              question.style.color = "#f4f4f4";
              icon.className = "fa-solid fa-minus icon"; // Đổi icon thành dấu trừ
          } else {
              answer.style.display = "none";
              question.style.removeProperty("background-color");
              question.style.removeProperty("color");
              icon.className = "fa-solid fa-plus icon"; // Đổi icon thành dấu cộng
          }
      });
  });
{% endjavascript %}
