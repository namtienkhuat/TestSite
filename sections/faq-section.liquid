{% schema %}
{
  "name": "FAQs Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "FAQs on Design & Development"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Your question here"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="container">
  <h1 class="title">{{ section.settings.section_title }}</h1>
  <div class="content">
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="question">
          <h2 class="question-content">{{ block.settings.question }}</h2>
          <i class="fa-solid fa-plus icon"></i>
        </div>
        <div class="answer">
          <h2 class="answer-active">{{ block.settings.answer }}</h2>
          <div class="answer-list">
            <span>- Mattis nunc sed blandit libero volutpat.</span><br>
            <span>- Tortor at risus viverra adipiscing at in tellus.</span><br>
            <span>- Purus ut faucibus pulvinar elementum.</span><br>
            <span>- Blandit turpis cursus in hac habitasse.</span>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .container {
    padding: 20px;
  }
  .title {
    font-size: 2em;
    margin-bottom: 20px;
  }
  .faq-item {
    margin-bottom: 20px;
  }
  .question {
    cursor: pointer;
  }
  .answer {
    display: none; /* Hide answers initially */
  }
  .answer-active {
    display: block; /* Show answer */
  }
</style>
