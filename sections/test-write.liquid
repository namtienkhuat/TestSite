<div class="container">
  <h1 class="title">{{ section.settings.section_title }}</h1>
  <div class="content">
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="question">
          <h2 class="question-content">{{ block.settings.question }}</h2>
          <i class="fa-solid fa-plus icon"></i>
        </div>
        <div class="answer" style="display: none;">
          <h2 class="answer-active">{{ block.settings.answer }}</h2>
          <div class="answer-list">
            <span>- Mattis nunc sed blandit libero volutpat.</span><br>
            <span>- Tortor at risus viverra adipiscing at in tellus.</span><br>
            <span>- Purus ut faucibus pulvinar elementum.</span><br>
            <span>- Blandit turpis cursus in hac habitasse.</span>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
        "name": "FAQs",
        "tag": "section",
        "class": "section",
        "disabled_on": {
                "groups": ["header", "footer"]
        },
        "settings": [
                {
                        "type": "text",
                        "id": "caption",
                        "label": "Caption",
                },
                {
                        "type": "inline_richtext",
                        "id": "heading",
                        "label": "Heading",
                        "default": "Test write content config"
                },
                {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra large"
        },
        {
          "value": "hxxl",
          "label": "Extra extra large"
        }
      ],
      "default": "h1",
      "label": "Medium"
    },
     {
      "type": "checkbox",
      "id": "open_first_question",
      "default": false,
      "label": "Open first question"
    }, {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }

                ],
 "blocks": [
  {
    "type": "question_row",
    "name": "Question Row",
    "settings": [
      {
        "type": "text",
        "id": "row_question",
        "label": "Question",
        "default": "Enter your question",
        "info": "Provide the question that will trigger the collapsible content."
      },
      {
        "type": "textarea",
        "id": "row_answer",
        "label": "Answer",
        "info": "Provide the answer that will be displayed when the question is clicked."
      }
    ]
  }
],
   "presets": [
    {
      "name": "FAQs Test Write",
       "blocks": [
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        }
      ]
    }
  ]
}
{% endschema %}
