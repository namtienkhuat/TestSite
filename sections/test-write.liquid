<div class="container">
  {% if section.settings.caption %}
    <h3 class="caption">{{ section.settings.caption }}</h3>
  {% endif %}

  {% if section.settings.heading %}
    <{{ section.settings.heading_size }} class="title">
      {{- section.settings.heading -}}
    </{{ section.settings.heading_size }}>
  {% endif %}

  <div class="content">
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="question">
          <h2 class="question-content">{{ block.settings.row_question }}</h2>
          <i class="fa-solid fa-plus icon"></i>
        </div>
        <div class="answer">
          <h2 class="answer-active">{{ block.settings.row_answer }}</h2>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  * {
    box-sizing: border-box;
  }

  body {
    font-family: "Lato", sans-serif;
    width: 100%;
    height: 100vh;
    margin: 0 auto;
    background-color: #fbf6e9;
  }

  .container {
    padding: 20px 0 10px;
    max-width: 800px;
    margin: 0 auto;
  }

  .title {
    text-align: center;
    font-size: 40px;
    font-weight: 400;
  }
  @media (max-width: 990px) {
    .title {
      font-size: 30px;
    }
  }
  @media (max-width: 768px) {
    .title {
      font-size: 20px;
    }
  }

  .content {
    width: 100%;
    margin: 20px auto 0;
  }
  @media (max-width: 990px) {
    .content {
      padding: 0 10px;
    }
  }

  .first-question,
  .second-question,
  .third-question,
  .fourth-question,
  .fifth-question {
    border: 1px solid gray;
    background-color: #f4f4f4;
  }
  .first-question.first-question, .first-question.second-question, .first-question.third-question, .first-question.fourth-question,
  .second-question.first-question,
  .second-question.second-question,
  .second-question.third-question,
  .second-question.fourth-question,
  .third-question.first-question,
  .third-question.second-question,
  .third-question.third-question,
  .third-question.fourth-question,
  .fourth-question.first-question,
  .fourth-question.second-question,
  .fourth-question.third-question,
  .fourth-question.fourth-question,
  .fifth-question.first-question,
  .fifth-question.second-question,
  .fifth-question.third-question,
  .fifth-question.fourth-question {
    border-bottom: none;
  }

  .question,
  .answer {
    padding: 20px;
  }

  .question {
    display: flex;
    justify-content: space-between;
    height: 60px;
  }
  .question:hover {
    background-color: #5db996;
    color: #f4f4f4;
  }

  .icon {
    font-size: 20px;
  }
  .icon:hover {
    cursor: pointer;
  }
  @media (max-width: 375px) {
    .icon {
      display: none;
    }
  }

  .answer {
    max-width: 800px;
    display: none;
    background-color: #e3f0af;
  }

  .answer-active {
    font-weight: 800;
  }

  .answer-list {
    margin: 10px 0;
  }

  @media (max-width: 375px) {
    .question-content {
      width: 200px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  @media (max-width: 375px) {
    .question {
      column-gap: 10px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "FAQs",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Test write content config"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra large"
        },
        {
          "value": "hxxl",
          "label": "Extra extra large"
        }
      ],
      "default": "h1",
      "label": "Medium"
    },
    {
      "type": "checkbox",
      "id": "open_first_question",
      "default": false,
      "label": "Open first question"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "question_row",
      "name": "Question Row",
      "settings": [
        {
          "type": "text",
          "id": "row_question",
          "label": "Question",
          "default": "Enter your question",
          "info": "Provide the question that will trigger the collapsible content."
        },
        {
          "type": "textarea",
          "id": "row_answer",
          "label": "Answer",
          "info": "Provide the answer that will be displayed when the question is clicked."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs Test Write",
      "blocks": [
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        }
      ]
    }
  ]
}
{% endschema %}
