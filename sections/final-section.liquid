<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div
  class="container"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px"
>
  <h1
    class="title"
    style="text-align: {{ section.settings.heading_alignment }}; font-size: {{ section.settings.heading_size }}"
  >
    {{ section.settings.heading }}
  </h1>
  <div class="content">
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="question">
          <h2 class="question-content" style="font-size: {{ block.settings.question_size }}">
            {{ block.settings.heading }}
          </h2>
          <i class="fa-solid fa-plus icon"></i>
        </div>
        <div
          class="answer"
          style="display: {% if forloop.first and section.settings.open_first_question %}block{% else %}none{% endif %};"
        >
          <h2 class="answer-active">{{ block.settings.row_content }}</h2>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
    p {
  margin: 0px;}
      * {
      box-sizing: border-box;
    }

    body {
      font-family: "Lato", sans-serif;
      width: 100%;
      height: 100vh;
      margin: 0 auto;
      background-color: #fbf6e9;
    }

    .container {
      padding: 20px 0 10px;
      max-width: 800px;
      margin: 0 auto;
    }

    .title {
      text-align: center;
      font-size: 40px;
      font-weight: 400;
    }
    @media (max-width: 990px) {
      .title {
        font-size: 30px;
      }
    }
    @media (max-width: 768px) {
      .title {
        font-size: 20px;
      }
    }
    .section {
      height: 100vh;
    }
    .content {
      width: 100%;
      margin: 20px auto 0;
    }
    @media (max-width: 990px) {
      .content {
        padding: 0 10px;
      }
    }

    .first-question,
    .faq-item {
      border: 1px solid gray;
      background-color: #f4f4f4;
      border-bottom: none;
    }

    .faq-item:last-child {
      border-bottom: 1px solid gray;
    }

    .question, .answer {
      padding: 20px;
      font-size: 20px;
    }
    .answer {
    font-size: 16px;
    }
    .question {
      display: flex;
      justify-content: space-between;
       transition: background-color 0.3s ease, color 0.3s ease; /* Thêm hiệu ứng chuyển đổi */
      align-items: center;
      color: black;
    }
    .question:hover {
      background-color: #5db996;
      color: #f4f4f4;
    }
    .question-content {
      margin: 0px;
    }

    .icon {
      font-size: 20px;
    }
    .icon:hover {
      cursor: pointer;
    }
    @media (max-width: 375px) {
      .icon {
        display: none;
      }
    }

    .answer {
      max-width: 800px;
      display: none;
      background-color: #e3f0af;
    }

    @media (max-width: 375px) {
      .question-content {
        width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }

    @media (max-width: 375px) {
      .question {
        column-gap: 10px;
      }
    }

    /*# sourceMappingURL=index.css.map */
</style>

