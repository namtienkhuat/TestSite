{{ 'all.min.css' | asset_url | stylesheet_tag }}

<div class="container">
  <h1 class="title">{{ section.settings.heading }}</h1>
  <div class="content">
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="question">
          <h2 class="question-content">{{ block.settings.heading }}</h2>
          <i class="fa-solid fa-plus icon"></i>
        </div>
        <div
          class="answer"
          style="display: {% if forloop.first and section.settings.open_first_question %}block{% else %}none{% endif %};"
        >
          <h2 class="answer-active">{{ block.settings.row_content }}</h2>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Final Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "FAQs on Design & Development",
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading",
      "options": [
    {
      "value": "xs",
      "label": "X-small"
    },
    {
      "value": "s",
      "label": "Small"
    },
    {
      "value": "m",
      "label": "Medium"
    },
    {
      "value": "l",
      "label": "Large"
    },
    {
      "value": "xl",
      "label": "X-large"
    },
    {
      "value": "xxl",
      "label": "XX-large"
    }
  ],
  "default": "m"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "open_first_collapsible_row",
      "default": true,
      "label": "Open first question row"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks": [
      {
      "type": "question_row",
      "name": "Question Row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Question Row",
          "label": "Enter your question",
          "info": "Include a heading that explains the content"
        },
        {
          "type": "richtext",
          "id": "row_content",
          "label": "Enter your answer"
        }

      ]}
    ],
    "presets": [
    {
      "name": "Final Section Demo",
      "blocks": [
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        },
        {
          "type": "question_row"
        }
      ]
    }
  ]
}
{% endschema %}
