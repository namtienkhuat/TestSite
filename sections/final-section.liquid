{{ 'all.min.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "FAQs",
  "tag": "div",
  "class": "container",
  "settings": [ {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "FAQs on Design & Developer"
    }],
   "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Your question here"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer here"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "FAQs on Design & Developer",
      "blocks": [{
        "type": "faq_item"
      }, {
        "type": "faq_item"
      }, {
        "type": "faq_item"
      }, {
        "type": "faq_item"
      }]
    }
  ]
}
{% endschema %}

<style>
    .container {
      padding: 20px 0 10px;
      max-width: 800px;
      margin: 0 auto;
    }
    .title {
      text-align: center;
      font-size: 40px;
      font-weight: 400;
    }
    .content {
      width: 100%;
      margin: 20px auto 0;
    }
    .question,
    .answer {
      padding: 20px;
    }
    .question {
    display: flex;
    justify-content: space-between;
    height: 60px;
  }
  .question:hover {
    background-color: #5db996;
    color: #f4f4f4;
  }

  .icon {
    font-size: 20px;
  }
  .icon:hover {
    cursor: pointer;
  }
</style>

<div class="container">
  <h1 class="title">{{ section.settings.section_title }}</h1>
  <div class="content">
    {% for block in section.blocks %}
      <div class="faq-item">
        <div class="question">
          <h2 class="question-content">{{ block.settings.question }}</h2>
          <i class="fa-solid fa-plus icon"></i>
        </div>
        <div
          class="answer"
          style="display: {% if forloop.first and section.settings.open_first_question %}block{% else %}none{% endif %};"
        >
          <h2 class="answer-active">{{ block.settings.answer }}</h2>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% javascript %}
  

document.addEventListener("DOMContentLoaded", function () {
    const questions = document.querySelectorAll(".question");
    const openFirstQuestion = "{{ section.settings.open_first_question }}" === "true"; // Lấy giá trị từ Liquid

    questions.forEach((question, index) => {
        const answer = question.nextElementSibling;
        const icon = question.querySelector("i.fa-solid.icon");

        // Mở câu hỏi đầu tiên nếu `open_first_question` được bật
        if (index === 0 && openFirstQuestion) {
            answer.style.display = "block";
            question.style.backgroundColor = "#118B50";
            question.style.color = "#f4f4f4";
            icon.className = "fa-solid fa-minus icon";
        } else {
            answer.style.display = "none";
        }

        question.addEventListener("click", () => {
            // Đóng tất cả các câu trả lời khác
            questions.forEach((q) => {
                const otherAnswer = q.nextElementSibling;
                const otherIcon = q.querySelector("i.fa-solid.icon");

                if (q !== question) {
                    otherAnswer.style.display = "none";
                    q.style.removeProperty("background-color");
                    q.style.removeProperty("color");
                    otherIcon.className = "fa-solid fa-plus icon";
                }
            });

            // Mở hoặc đóng câu trả lời hiện tại
            if (answer.style.display === "none" || !answer.style.display) {
                answer.style.display = "block";
                question.style.backgroundColor = "#118B50";
                question.style.color = "#f4f4f4";
                icon.className = "fa-solid fa-minus icon";
            } else {
                answer.style.display = "none";
                question.style.removeProperty("background-color");
                question.style.removeProperty("color");
                icon.className = "fa-solid fa-plus icon";
            }
        });
    });
});
{% endjavascript %}
